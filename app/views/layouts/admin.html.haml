!!!
%html
  %head
    %title Swizzle Admin
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag

  %body
    .header
      .container
        .row
          .span2
            %h3= link_to 'Swizzle', root_url, :class => 'logo'
          .span8
            %ul
              = navigation_li(:cocktails){ link_to 'Cocktails', admin_cocktails_path }
              = navigation_li(:ingredients){ link_to 'Ingredients', admin_ingredients_path }

    .container
      #notice= notice
      = yield
