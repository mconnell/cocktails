!!!
%html
  %head
    %title Cocktails
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag

  %body
    .container
      %h3= link_to 'cocktails', root_url, :class => 'logo'
      %ul.tabs
        = navigation_li(:cocktails){ link_to 'Cocktails', cocktails_path }
        = navigation_li(:ingredients){ link_to 'Ingredients', ingredients_path }

    .container
      #notice= notice
      = yield
