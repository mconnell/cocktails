.page-header
  %h1 Listing Cocktails

= link_to 'New cocktail', new_admin_cocktail_path, :class => 'btn primary'

%table
  %tr
    %th(width="790") Name
    %th
    %th

  - @cocktails.each do |cocktail|
    %tr
      %td= link_to cocktail.name, cocktail
      %td(colspan='2')
        = link_to 'Edit', [:edit, :admin, cocktail], :class => 'btn small'
        = link_to 'Destroy', [:admin, cocktail], :confirm => 'Are you sure?', :method => :delete, :class => 'btn small'

= link_to 'New cocktail', new_admin_cocktail_path, :class => 'btn primary'
