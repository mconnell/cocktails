.page-header
  %h1 Listing Cocktails

= link_to 'New cocktail', new_cocktail_path, :class => 'btn primary'

%table
  %tr
    %th Name
    %th
    %th

  - @cocktails.each do |cocktail|
    %tr
      %td= link_to cocktail.name, cocktail
      %td(colspan='2')
        = link_to 'Edit', edit_cocktail_path(cocktail), :class => 'btn small'
        = link_to 'Destroy', cocktail, :confirm => 'Are you sure?', :method => :delete, :class => 'btn small'

= link_to 'New cocktail', new_cocktail_path, :class => 'btn primary'
