.page-header
  %h1= @cocktail.name

.row
  .span4.columns
    %h2 Ingredients

    %ul.unstyled.ingredients_list
      - @cocktail.measured_ingredients.each do |measured_ingredient|
        %li{ :class => (my_ingredients.include?(measured_ingredient.ingredient.id) ? 'has_ingredient' : '') }
          = measured_ingredient.measure
          = link_to measured_ingredient.ingredient.name, measured_ingredient.ingredient


  .span12.columns
    %h3 Preparation
    = simple_format @cocktail.preparation
