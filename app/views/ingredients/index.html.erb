<h1>Listing ingredients</h1>

<%= link_to 'New ingredient', new_ingredient_path, :class => 'btn primary' %>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
  </tr>

<% @ingredients.each do |ingredient| %>
  <tr>
    <td><%= link_to ingredient.name, ingredient %></td>
    <td colspan="2">
      <%= link_to 'Edit', edit_ingredient_path(ingredient), :class => 'btn small' %>
      <%= link_to 'Destroy', ingredient, :confirm => 'Are you sure?', :method => :delete, :class => 'btn small' %>
    </td>
  </tr>
<% end %>
</table>

<%= link_to 'New ingredient', new_ingredient_path, :class => 'btn primary' %>
